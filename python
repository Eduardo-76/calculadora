while True:
    n1 = float(input('Digite o 1° número: '))
    nx = input('qual operação deseja fazer?: ')
    n2 = float(input('Digite o 2° número: '))
    try:
        if nx == '+':
            print(n1 + n2)
        elif nx == '-':
            print(n1 - n2)
        elif nx == '*':
            print(n1 * n2)
        elif nx == '/':
            print(n1 / n2)
        else:
            print('Operação inválida')

    except ZeroDivisionError:
        print('Operação inválida')

    break
